<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="property_form_view" model="ir.ui.view">
            <field name="name">property.form.view</field>
            <field name="model">property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Property Name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Chung Cu ABC"/></h1>
                            <label for="owner_id"/>
                            <h3><field name="owner_id"/></h3>
                            <label for="code"/>
                            <h3><field name="code"/></h3>
                        </div>
                        <group name="images">
                            <group>
                                <field name="group"/>
                                <field name="price"/>
                                <field name="attribute"/>
                            </group>
                            <group>
                                <field name="parcel_number"/>
                                <field name="area"/>
                            </group>                            
                        </group>
                        <notebook>
                            <page name="general_information" string="General Information">
								<group>
									<group>
										<field name="name"/>
									</group>
									<group>
										<label for="description" colspan="2"/>
										<field name="description" colspan="2" nolabel="1"/>
									</group>
								</group>
							</page>
							<page name="additional_information" string="Additional Information">
								<group>
									<group string="Images">
										<field name="property_image" string="Property's Image" widget="image"/>
									</group>
									<group string="Products">
										<field name="product_ids" widget="many2many_tags"/>
									</group>
								</group>
							</page>							
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_tree_view" model="ir.ui.view">
            <field name="name">property.tree.view</field>
            <field name="model">property</field>
            <field name="arch" type="xml">
                <tree string="Properties" default_order="create_date desc">
                    <field name="name"/>
                    <field name="price"/>
                    <field name="group"/>
                    <field name="attribute"/>                    
                    <field name="parcel_number"/>
                    <field name="area"/>
                    <field name="owner_id"/>
                </tree>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Bất Động Sản</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property</field>
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('property_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('property_form_view')})]"/>
        </record>


        <menuitem id="main_property"
            name="Bất Động Sản"
            sequence="80"
            groups="base.group_user"/>

        <menuitem id="property_menu" 
                name="Sản phẩm"
                action="action_property"
                parent="main_property"/>
</odoo>
